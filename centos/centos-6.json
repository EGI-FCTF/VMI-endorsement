{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "RedHat_64",
    "disk_size": 8000,
    "iso_url": "http://mirror.tedra.es/CentOS/6.10/isos/x86_64/CentOS-6.10-x86_64-netinstall.iso",
    "iso_checksum": "56f7b078a3b443095ba006cdc85319c691251cda98c5d73d12ef6db7aff6b4c1",
    "iso_checksum_type": "sha256",
    "ssh_username": "root",
    "ssh_password": "rootpassword",
    "ssh_wait_timeout": "90m",
    "shutdown_command": "shutdown -h now",
    "http_directory": "httpdir",
    "http_port_min": 8500,
    "http_port_max": 8550,
    "vboxmanage": [ ["modifyvm", "{{.Name}}", "--memory", "1024"] ],
    "boot_command": [
        "<esc>",
        " linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.cfg",
        "<enter>"
    ],
    "format": "ova",
    "vm_name": "centos.6-2019.07.08"
  }],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "provisioners/init.yaml"
    },
    {
      "type": "shell",
      "expect_disconnect": true,
      "inline": ["reboot &", "sleep 5s"] 
    },
    {
      "type": "ansible",
      "playbook_file": "provisioners/config.yaml",
      "pause_before": "30s"
    }
  ]
}
