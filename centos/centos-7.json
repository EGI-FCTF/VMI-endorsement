{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "RedHat_64",
    "disk_size": 8000,
    "iso_url": "http://ftp.cica.es/CentOS/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1708.iso",
    "iso_checksum": "fe3d960cce4d2c1c9f1b66817fe87cc0ee1a1c6c5dd126204cb5c33d51a45620",
    "iso_checksum_type": "sha256",
    "ssh_username": "root",
    "ssh_password": "rootpassword",
    "ssh_wait_timeout": "90m",
    "shutdown_command": "shutdown -h now",
    "http_directory": "httpdir",
    "http_port_min": 8500,
    "http_port_max": 8550,
    "vboxmanage": [ ["modifyvm", "{{.Name}}", "--memory", "1024"] ],
    "boot_command": [
        "<esc>",
        " linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.cfg",
        "<enter>"
    ],
    "format": "ova",
    "vm_name": "centos.7-2018.01.23"
  }],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "provisioners/init.yaml"
    },
    {
      "type": "ansible",
      "playbook_file": "provisioners/config.yaml",
      "pause_before": "30s"
    }
  ]
}
